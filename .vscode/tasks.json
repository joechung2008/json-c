{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Build (Debug)",
      "type": "shell",
      "linux": {
        "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build",
        "problemMatcher": []
      },
      "windows": {
        "command": "cmake -S . -B build && cmake --build build --config Debug",
        "problemMatcher": ["$msCompile"]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "CMake: Build (Release)",
      "type": "shell",
      "linux": {
        "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build",
        "problemMatcher": []
      },
      "windows": {
        "command": "cmake -S . -B build && cmake --build build --config Release",
        "problemMatcher": ["$msCompile"]
      },
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "linux": {
        "command": "cmake",
        "args": ["--build", "build", "--target", "clean"]
      },
      "windows": {
        "command": "cmake --build build --target clean --config Debug && cmake --build build --target clean --config Release"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Run Tests (Debug)",
      "type": "shell",
      "linux": {
        "command": "ctest --test-dir build --output-on-failure"
      },
      "windows": {
        "command": "ctest --test-dir build -C Debug --output-on-failure"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Run Tests (Release)",
      "type": "shell",
      "linux": {
        "command": "ctest --test-dir build --output-on-failure"
      },
      "windows": {
        "command": "ctest --test-dir build -C Release --output-on-failure"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
