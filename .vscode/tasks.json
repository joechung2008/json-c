{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Build",
      "type": "shell",
      "linux": {
        "command": "bin/build.sh"
      },
      "windows": {
        "command": "bin/build.ps1",
        "args": ["--Configuration", "Debug"]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "CMake: Build (Release)",
      "type": "shell",
      "linux": {
        "command": "bin/build.sh"
      },
      "windows": {
        "command": "bin/build.ps1",
        "args": ["--Configuration", "Release"]
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--target", "clean"],
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: Run Tests",
      "type": "shell",
      "linux": {
        "command": "bin/run-tests.sh"
      },
      "windows": {
        "command": "bin/run-tests.ps1"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
